{
	"name": "monitor-pro",
	"displayName": "Monitor Pro",
	"description": "Monitor all the resources you care about.",
	"publisher": "nexmoe",
	"keywords": [
		"performance",
		"resource",
		"resources",
		"monitor",
		"memory",
		"cpu",
		"io",
		"network",
		"disk",
		"storage"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/nexmoe/vscode-monitor-pro"
	},
	"icon": "assets/icon.png",
	"version": "0.6.0",
	"engines": {
		"vscode": "1.99.3"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "run-s package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "run-s build:i18n && webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "run-s compile-tests && run-s compile && run-s lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"build:i18n": "node scripts/build-i18n.js"
	},
	"devDependencies": {
		"@types/mocha": "10.0.10",
		"@types/node": "18.19.86",
		"@types/vscode": "1.99.1",
		"@typescript-eslint/eslint-plugin": "6.21.0",
		"@typescript-eslint/parser": "6.21.0",
		"@vscode/test-electron": "2.5.2",
		"eslint": "8.57.1",
		"glob": "10.4.5",
		"mocha": "10.8.2",
		"npm-run-all2": "5.0.2",
		"ts-loader": "9.5.2",
		"typescript": "5.8.3",
		"webpack": "5.99.5",
		"webpack-cli": "5.1.4"
	},
	"dependencies": {
		"systeminformation": "5.25.11"
	},
	"contributes": {
		"configuration": {
			"title": "Monitor Pro",
			"properties": {
				"monitor-pro.metrics": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"cpu",
							"memoryActive",
							"memoryUsed",
							"network",
							"fileSystem",
							"battery",
							"cpuTemp",
							"cpuSpeed",
							"osDistro",
							"diskSpace",
							"uptime"
						]
					},
					"default": [
						"cpu",
						"memoryActive",
						"memoryUsed",
						"network",
						"fileSystem",
						"battery",
						"cpuTemp",
						"cpuSpeed",
						"osDistro",
						"diskSpace",
						"uptime"
					],
					"description": "%config.metrics%"
				},
				"monitor-pro.refresh-interval": {
					"type": "number",
					"default": 3000,
					"description": "%config.refresh-interval%"
				},
				"monitor-pro.diskSpace": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [
						"all",
						"C:"
					],
					"description": "%config.diskSpace%"
				}
			}
		}
	}
}
