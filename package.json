{
	"name": "monitor-pro",
	"displayName": "Monitor Pro",
	"description": "Monitor all the resources you care about.",
	"publisher": "nexmoe",
	"keywords": [
		"performance",
		"resource",
		"resources",
		"monitor",
		"memory",
		"cpu",
		"io",
		"network",
		"disk",
		"storage"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/nexmoe/vscode-monitor-pro"
	},
	"icon": "assets/icon.png",
	"version": "0.5.2",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"scripts": {
		"vscode:prepublish": "run-s package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "run-s build:i18n && webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "run-s compile-tests && run-s compile && run-s lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"build:i18n": "node scripts/build-i18n.js"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.2",
		"@types/node": "18.x",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^6.7.3",
		"@typescript-eslint/parser": "^6.7.3",
		"@vscode/test-electron": "^2.3.4",
		"eslint": "^8.50.0",
		"glob": "^10.3.3",
		"mocha": "^10.2.0",
		"npm-run-all2": "5.0.0",
		"ts-loader": "^9.4.4",
		"typescript": "^5.2.2",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"systeminformation": "^5.21.9"
	},
	"contributes": {
		"configuration": {
			"title": "Monitor Pro",
			"properties": {
				"monitor-pro.metrics": {
					"type": "array",
					"items": {
						"type": "string",
						"enum": [
							"cpu",
							"memoryActive",
							"memoryUsed",
							"network",
							"fileSystem",
							"battery",
							"cpuTemp",
							"cpuSpeed",
							"osDistro"
						]
					},
					"default": [
						"cpu",
						"memoryActive",
						"memoryUsed",
						"network",
						"fileSystem",
						"battery",
						"cpuTemp",
						"cpuSpeed",
						"osDistro"
					],
					"description": "%config.metrics%"
				},
				"monitor-pro.refresh-interval": {
					"type": "number",
					"default": 3000,
					"description": "%config.refresh-interval%"
				}
			}
		}
	}
}
